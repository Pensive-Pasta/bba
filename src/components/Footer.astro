---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: "Instagram", url: "https://instagram.com" },
  { name: "LinkedIn", url: "https://linkedin.com" },
  { name: "Pinterest", url: "https://pinterest.com" },
];
---

<footer class="py-12 px-6 md:px-12 mt-20 border-t border-gray-100">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-sm font-medium mb-4">we are bba</h3>
        <p class="text-sm text-gray-600 max-w-xs">
          An architecture practice focused on creating thoughtful, sustainable
          spaces that enhance the way people live and work.
        </p>
      </div>

      <div>
        <h3 class="text-sm font-medium mb-4">Contact</h3>
        <address class="text-sm text-gray-600 not-italic">
          123 Architecture Street<br />
          London, UK<br />
          <a
            href="mailto:hello@wearebba.com"
            class="hover:text-black transition-colors">hello@wearebba.com</a
          ><br />
          <a href="tel:+442012345678" class="hover:text-black transition-colors"
            >+44 20 1234 5678</a
          >
        </address>
      </div>

      <div>
        <h3 class="text-sm font-medium mb-4">Connect</h3>
        <ul class="space-y-2">
          {
            socialLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-gray-600 hover:text-black transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div
      class="mt-12 pt-6 border-t border-gray-100 flex flex-col md:flex-row justify-between items-center"
    >
      <p class="text-xs text-gray-500">
        &copy; {currentYear} we are bba. All rights reserved.
      </p>

      <nav class="mt-4 md:mt-0">
        <ul class="flex space-x-6">
          <li>
            <a
              href="/privacy"
              class="text-xs text-gray-500 hover:text-black transition-colors"
            >
              Privacy
            </a>
          </li>
          <li>
            <a
              href="/terms"
              class="text-xs text-gray-500 hover:text-black transition-colors"
            >
              Terms
            </a>
          </li>
          <li>
            <a
              href="/cookies"
              class="text-xs text-gray-500 hover:text-black transition-colors"
            >
              Cookies
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</footer>
