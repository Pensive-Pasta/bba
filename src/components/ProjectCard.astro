---
const { title, location, category, year, image, slug, type } = Astro.props;
---

<a href={`/projects/${type}/${slug}`} class="group block">
  <div class="overflow-hidden">
    <img
      src={image || "/placeholder.svg"}
      alt={title}
      class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
    />
  </div>
  <div class="mt-4 space-y-1">
    <h3 class="text-lg font-normal">{title}</h3>
    <p class="text-sm text-gray-600">{location}, {year}</p>
    <p class="text-xs uppercase tracking-wider text-gray-500">{category}</p>
  </div>
</a>
