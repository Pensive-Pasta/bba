---
const logos = [
  { src: "/logos/riba.svg", alt: "RIBA Chartered Practice" },
  { src: "/logos/arb.svg", alt: "Architects Registration Board" },
  { src: "/logos/passivhaus.svg", alt: "Passivhaus Trust" },
  { src: "/logos/aecb.svg", alt: "AECB Member" },
  { src: "/logos/webcarbon.svg", alt: "Web Carbon" },
];
---

<div class="overflow-hidden w-full py-6 bg-white">
  <div
    class="flex animate-scroll whitespace-nowrap will-change-transform"
    style="animation: scroll 30s linear infinite;"
  >
    {logos.concat(logos).map((logo) => (
      <img
        src={logo.src}
        alt={logo.alt}
        class="h-12 mx-8 inline-block opacity-70 hover:opacity-100 transition-opacity invert"
        loading="lazy"
        width="auto"
        height="120"
      />
    ))}
  </div>
</div>

<style is:global>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>