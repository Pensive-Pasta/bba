---
interface Credit {
  label: string;
  value: string;
}

interface Props {
  credits: Credit[];
}

const { credits = [] } = Astro.props;
---

{
  credits.length > 0 && (
    <section class="px-4 md:px-8 mb-12 md:mb-24">
      <span class="block w-full h-px bg-primary mt-3 md:mt-0" />
      <div class="flex flex-col md:flex-row justify-between ">
        <h2 class="text-xl md:text-2xl font-bold text-primary mt-4">
          Credits
        </h2>
        <ul class="space-y-2">
          {credits.map((credit) => (
            <li class="grid grid-cols-[auto_1fr] gap-x-2 md:gap-x-3 items-baseline mt-4">
              <span class="text-xs md:text-base font-medium whitespace-nowrap">{credit.label}:</span>
              <span class="text-sm md:text-lg text-primary break-words">{credit.value}</span>
            </li>
          ))}
        </ul>
      </div>
    </section>
  )
}
