---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import SectionTitle from "../../../components/SectionTitle.astro";

const projectInfo = {
  title: "Riverside Gallery",
  location: "Manchester",
  year: "2022",
  client: "Manchester Arts Council",
  size: "1,200 mÂ²",
  services: "Full Architectural Services",
  photographer: "Jane Doe",
  description:
    "A contemporary art gallery located on the banks of the River Irwell. The design creates a series of flexible exhibition spaces that can be reconfigured to accommodate different types of art and events.",
  images: [
    "/images/placeholder.jpg",
    "/images/placeholder.jpg",
    "/images/placeholder.jpg",
    "/images/placeholder.jpg",
    "/images/placeholder.jpg",
    "/images/placeholder.jpg",
  ],
};
---

<BaseLayout title={projectInfo.title}>
  <article>
    <section class="py-20 px-4 md:px-12">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20">
          <div>
            <h1 class="text-3xl md:text-4xl font-light mb-6">
              {projectInfo.title}
            </h1>
            <p class="text-lg text-gray-700 mb-8">
              {projectInfo.description}
            </p>
            <div class="grid grid-cols-2 gap-x-8 gap-y-4">
              <div>
                <h3 class="text-sm font-medium text-gray-500">Location</h3>
                <p>{projectInfo.location}</p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-500">Year</h3>
                <p>{projectInfo.year}</p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-500">Client</h3>
                <p>{projectInfo.client}</p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-500">Size</h3>
                <p>{projectInfo.size}</p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-500">Services</h3>
                <p>{projectInfo.services}</p>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-500">Photographer</h3>
                <p>{projectInfo.photographer}</p>
              </div>
            </div>
          </div>
          <div>
            <img
              src={projectInfo.images[0] || "/placeholder.svg"}
              alt={projectInfo.title}
              class="w-full aspect-[4/3] object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <section class="py-12 px-4 md:px-12">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <img
            src={projectInfo.images[1] || "/placeholder.svg"}
            alt={`${projectInfo.title} - Interior view`}
            class="w-full aspect-[4/3] object-cover"
          />
          <img
            src={projectInfo.images[2] || "/placeholder.svg"}
            alt={`${projectInfo.title} - Interior view`}
            class="w-full aspect-[4/3] object-cover"
          />
        </div>
      </div>
    </section>

    <section class="py-12 px-4 md:px-12">
      <div class="container mx-auto">
        <div class="max-w-3xl mx-auto">
          <p class="text-lg text-gray-700 mb-6">
            The Riverside Gallery is designed to be a beacon for the arts in
            Manchester, with a distinctive form that responds to its riverside
            setting. The building is clad in a perforated metal skin that
            filters light during the day and glows at night, creating a lantern
            effect.
          </p>
          <p class="text-lg text-gray-700">
            Inside, the gallery spaces are characterized by their flexibility
            and quality of light. A combination of top lighting and carefully
            positioned windows creates ideal conditions for viewing art while
            maintaining a connection to the surrounding context.
          </p>
        </div>
      </div>
    </section>

    <section class="py-12 px-4 md:px-12">
      <div class="container mx-auto">
        <img
          src={projectInfo.images[3] || "/placeholder.svg"}
          alt={`${projectInfo.title} - Full width view`}
          class="w-full aspect-video object-cover"
        />
      </div>
    </section>

    <section class="py-12 px-4 md:px-12">
      <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <img
            src={projectInfo.images[4] || "/placeholder.svg"}
            alt={`${projectInfo.title} - Detail view`}
            class="w-full aspect-[4/3] object-cover"
          />
          <img
            src={projectInfo.images[5] || "/placeholder.svg"}
            alt={`${projectInfo.title} - Detail view`}
            class="w-full aspect-[4/3] object-cover"
          />
        </div>
      </div>
    </section>

    <section class="py-20 px-4 md:px-12 bg-gray-50">
      <div class="container mx-auto">
        <SectionTitle
          title="More Projects"
          subtitle="Explore more of our public and cultural projects."
        />

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
          <a href="/projects/places/community-hub" class="group block">
            <div class="overflow-hidden">
              <img
                src="/images/placeholder.jpg"
                alt="Community Hub"
                class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
              />
            </div>
            <div class="mt-4 space-y-1">
              <h3 class="text-lg font-normal">Community Hub</h3>
              <p class="text-sm text-gray-600">Bristol, 2021</p>
            </div>
          </a>

          <a href="/projects/places/office-renovation" class="group block">
            <div class="overflow-hidden">
              <img
                src="/images/placeholder.jpg"
                ,
                alt="Office Renovation"
                class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
              />
            </div>
            <div class="mt-4 space-y-1">
              <h3 class="text-lg font-normal">Office Renovation</h3>
              <p class="text-sm text-gray-600">Edinburgh, 2021</p>
            </div>
          </a>

          <a href="/projects/places/riverside-gallery" class="group block">
            <div class="overflow-hidden">
              <img
                src="/images/placeholder.jpg"
                ,
                alt="Riverside Gallery"
                class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
              />
            </div>
            <div class="mt-4 space-y-1">
              <h3 class="text-lg font-normal">Riverside Gallery</h3>
              <p class="text-sm text-gray-600">Manchester, 2022</p>
            </div>
          </a>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>
