---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageDotGrid from "../components/PageDotGrid.astro";
---

<BaseLayout>
  <PageDotGrid />
  <section
    class="flex px-4 md:px-8 pt-[150px] md:pt-[200px] py-20 max-w-[1600px] mx-auto"
  >
    <div class="w-1/2">
      <h1 class="text-3xl md:text-[40px] font-bold">Studio</h1>
      <div class="flex gap-2 md:gap-4 mt-4 text-sm md:text-base">
        <span
          class="tab text-primary cursor-pointer opacity-50"
          data-tab="profile">Profile</span
        >
        <span
          class="tab text-primary cursor-pointer opacity-100"
          data-tab="people">People</span
        >
        <span
          class="tab text-primary cursor-pointer opacity-100"
          data-tab="values">Values</span
        >
        <span
          class="tab text-primary cursor-pointer opacity-100"
          data-tab="awards">Awards</span
        >
      </div>
    </div>
    <div class="w-1/2 pl-4 md:pl-8">
      <div id="profile" class="min-h-[60vh]">
        <p
          class="text-base md:text-2xl leading-normal text-primary mb-8 font-light"
        >
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi
          interdum justo risus, nec posuere urna iaculis ac. Nulla vehicula
