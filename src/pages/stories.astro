---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionTitle from '../components/SectionTitle.astro';

const stories = [
  {
    title: 'Designing for Wellbeing',
    date: 'April 15, 2023',
    excerpt: 'How architecture can promote physical and mental health through thoughtful design choices.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'designing-for-wellbeing'
  },
  {
    title: 'The Future of Sustainable Housing',
    date: 'March 2, 2023',
    excerpt: 'Exploring innovative approaches to creating environmentally responsible homes.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'future-of-sustainable-housing'
  },
  {
    title: 'Adaptive Reuse: Giving New Life to Old Buildings',
    date: 'February 10, 2023',
    excerpt: 'The environmental and cultural benefits of repurposing existing structures.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'adaptive-reuse'
  },
  {
    title: 'Designing for Community',
    date: 'January 5, 2023',
    excerpt: 'How architecture can foster social connections and create vibrant neighborhoods.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'designing-for-community'
  },
  {
    title: 'The Role of Light in Architecture',
    date: 'December 12, 2022',
    excerpt: 'Exploring how natural light shapes our experience of space and influences wellbeing.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'role-of-light'
  },
  {
    title: 'Material Matters: Choosing Sustainable Building Materials',
    date: 'November 8, 2022',
    excerpt: 'A guide to selecting materials that minimize environmental impact without compromising quality.',
    image: '/placeholder.svg?height=600&width=800',
    slug: 'material-matters'
  }
];
---

<BaseLayout title="Stories">
  <section class="py-20 px-6 md:px-12">
    <div class="container mx-auto">
      <SectionTitle 
        title="Stories" 
        subtitle="Thoughts, insights, and ideas from the we are bba team."
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
        {stories.map(story => (
          <article class="group">
            <a href={`/stories/${story.slug}`} class="block">
              <div class="overflow-hidden">
                <img 
                  src={story.image || "/placeholder.svg"} 
                  alt={story.title} 
                  class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
                />
              </div>
              <div class="mt-4 space-y-2">
                <p class="text-sm text-gray-500">{story.date}</p>
                <h3 class="text-xl font-normal group-hover:underline">{story.title}</h3>
                <p class="text-gray-700">{story.excerpt}</p>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
  
  <section class="py-20 px-6 md:px-12 bg-gray-50">
    <div class="container mx-auto">
      <SectionTitle 
        title="Subscribe to Our Newsletter" 
        subtitle="Stay updated with our latest projects, insights, and events."
      />
      
      <div class="max-w-md mx-auto">
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
              required
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
              required
            />
          </div>
          <div class="pt-2">
            <button 
              type="submit" 
              class="w-full px-4 py-2 bg-black text-white hover:bg-gray-800 transition-colors"
            >
              Subscribe
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-2">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
