---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionWrapper from "../layouts/SectionWrapper.astro";
---

<BaseLayout title="Contact">
  <SectionWrapper id="contact" class="pb-20 pt-40">

      <SectionTitle
        title="Contact Us"
        subtitle="We'd love to hear from you. Get in touch with us to discuss your project."
      />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20">
        <div>
          <form class="space-y-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-1">Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
                required
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
                required
              />
            </div>
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Phone (optional)</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
              />
            </div>
            <div>
              <label
                for="project-type"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Project Type</label
              >
              <select
                id="project-type"
                name="project-type"
                class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
                required
              >
                <option value="" disabled selected>Select a project type</option
                >
                <option value="residential">Residential</option>
                <option value="commercial">Commercial</option>
                <option value="cultural">Cultural</option>
                <option value="educational">Educational</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-200"
                required></textarea>
            </div>
            <div class="pt-2">
              <button
                type="submit"
                class="px-6 py-2 bg-black text-white hover:bg-gray-800 transition-colors"
              >
                Send Message
              </button>
            </div>
          </form>
        </div>

        <div>
          <div class="mb-8">
            <h3 class="text-xl font-normal mb-4">Visit Us</h3>
            <address class="text-gray-700 not-italic">
              The Courthouse, Mill Road, Oundle<br />
              Northamptonshire, PE8 4BW<br />
              <a
                href="https://maps.app.goo.gl/t7e9zvdwpHaPgaHKA"
                target="_blank"
                rel="noopener noreferrer"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >View on Map</a
              >
            </address>
          </div>

          <div class="mb-8">
            <h3 class="text-xl font-normal mb-4">Contact Details</h3>
            <p class="text-gray-700 mb-2">
              <span class="font-medium">General Enquiries:</span><br />
              <a
                href="mailto:hello@wearebba.co.uk"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >hello@wearebba.co.uk</a
              ><br />
              <a
                href="tel:+441832774121"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >+44 (0) 1832 774 121</a
              >
            </p>
            <p class="text-gray-700 mb-2">
              <span class="font-medium">New Business:</span><br />
              <a
                href="mailto:newbusiness@wearebba.com"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >newbusiness@wearebba.com</a
              ><br />
              <a
                href="tel:+442012345679"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >+44 20 1234 5679</a
              >
            </p>
            <p class="text-gray-700">
              <span class="font-medium">Careers:</span><br />
              <a
                href="mailto:careers@wearebba.com"
                class="border-b border-black hover:opacity-70 transition-opacity"
                >careers@wearebba.com</a
              >
            </p>
          </div>

          <div>
            <h3 class="text-xl font-normal mb-4">Office Hours</h3>
            <p class="text-gray-700">
              Monday to Friday: 10am - 4pm<br />
              Weekends: Closed
            </p>
          </div>
        </div>
      </div>
  </SectionWrapper>

