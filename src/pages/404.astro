---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found">
  <section
    class="py-20 md:py-32 px-4 md:px-12 flex flex-col items-center justify-center min-h-[60vh]"
  >
    <div class="container mx-auto max-w-2xl text-center">
      <h1 class="text-6xl md:text-8xl font-light mb-6">404</h1>
      <h2 class="text-2xl md:text-3xl font-light mb-8">Page not found</h2>
      <p class="text-lg text-gray-700 mb-12">
        Now, let's not point fingers. Let's just point you back in the right
        direction.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="px-4 py-3 border border-black hover:bg-black hover:text-white transition-colors"
        >
          Return Home
        </a>
        <a
          href="/work"
          class="px-4 py-3 border border-gray-300 hover:border-black transition-colors"
        >
          View Projects
        </a>
      </div>
    </div>
  </section>

  <section class="py-20 px-4 md:px-12 bg-gray-50">
    <div class="container mx-auto max-w-3xl text-center">
      <h3 class="text-xl font-normal mb-6">Looking for something specific?</h3>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 text-left"
      >
        <div>
          <h4 class="font-medium mb-3">Projects</h4>
          <ul class="space-y-2">
            <li>
              <a
                href="/projects/homes"
                class="text-gray-600 hover:text-black transition-colors"
                >Residential</a
              >
            </li>
            <li>
              <a
                href="/projects/places"
                class="text-gray-600 hover:text-black transition-colors"
                >Public & Cultural</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h4 class="font-medium mb-3">About Us</h4>
          <ul class="space-y-2">
            <li>
              <a
                href="/practice"
                class="text-gray-600 hover:text-black transition-colors"
                >Our Practice</a
              >
            </li>
            <li>
              <a
                href="/practice/team"
                class="text-gray-600 hover:text-black transition-colors"
                >Our Team</a
              >
            </li>
            <li>
              <a
                href="/process"
                class="text-gray-600 hover:text-black transition-colors"
                >Our Process</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h4 class="font-medium mb-3">Get in Touch</h4>
          <ul class="space-y-2">
            <li>
              <a
                href="/contact"
                class="text-gray-600 hover:text-black transition-colors"
                >Contact Us</a
              >
            </li>
            <li>
              <a
                href="/stories"
                class="text-gray-600 hover:text-black transition-colors"
                >Stories</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
