---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/SectionTitle.astro";

const insights = [
  {
    title: "Test Story",
    date: "April 15, 2023",
    excerpt:
      "How architecture can promote physical and mental health through thoughtful design choices.",
    image: "/images/placeholder.jpg",
    slug: "test-story",
  },
  {
    title: "Another Test Story",
    date: "May 10, 2023",
    excerpt:
      "Exploring the potential of architecture to create a sense of belonging and community.",
    image: "/images/placeholder.jpg",
    slug: "another-test-story",
  },
  {
    title: "Yet Another Test Story",
    date: "June 5, 2023",
    excerpt:
      "Delving into the complex relationship between architecture and sustainability.",
    image: "/images/placeholder.jpg",
    slug: "yet-another-test-story",
  },
  {
    title: "Yet Another Test Story 2",
    date: "June 5, 2023",
    excerpt:
      "Delving into the complex relationship between architecture and sustainability.",
    image: "/images/placeholder.jpg",
    slug: "yet-another-test-story-2",
  },
];
---

<BaseLayout title="insights">
  <section class="py-20 px-6 md:px-12">
    <div class="container mx-auto">
      <SectionTitle
        title="insights"
        subtitle="Thoughts, insights, and ideas from the we are bba team."
      />

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12"
      >
        {
          insights.map((story) => (
            <article class="group">
              <a href={`/insights/${story.slug}`} class="block">
                <div class="overflow-hidden">
                  <img
                    src={story.image || "/placeholder.svg"}
                    alt={story.title}
                    class="w-full aspect-[4/3] object-cover transition-transform duration-700 group-hover:scale-105"
                  />
                </div>
                <div class="mt-4 space-y-2">
                  <p class="text-sm text-gray-500">{story.date}</p>
                  <h3 class="text-xl font-normal group-hover:underline">
                    {story.title}
                  </h3>
                  <p class="text-gray-700">{story.excerpt}</p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
