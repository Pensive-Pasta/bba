---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import LandingLogo from "../components/LandingLogo.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionWrapper from "../layouts/SectionWrapper.astro";
import Hero from "../components/Hero.astro";

// Featured projects data
const featuredProjects = [
  {
    title: "Wrap Around House",
    location: "Cambridge",
    category: "Residential",
    year: "2023",
    image:
      "/images/bba-018-wrap_around_house-complete-copyright_msap-16-900x900.jpg",
    slug: "wrap-around-house",
    type: "homes",
  },
  {
    title: "Western Park",
    location: "Leicester",
    category: "Cultural",
    year: "2025",
    image: "/images/westernpark.jpg",
    slug: "western-park",
    type: "places",
  },
  {
    title: "Copper House",
    location: "Cambridge",
    category: "Residential",
    year: "2024",
    image: "/images/copper.jpg",
    slug: "copper-house",
    type: "homes",
  },
];
---

<div id="landing" class="landing-overlay">
  <LandingLogo />
</div>

<BaseLayout>
  <!-- Hero Section -->
  <Hero />

  <!-- About Section -->
  <SectionWrapper>
    <div class="container mx-auto">
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center"
      >
        <div>
          <h2
            class="text-3xl md:text-4xl font-light mb-6 opacity-0 animate-on-scroll"
            data-animate="fadeInDown"
          >
            We design spaces that inspire and endure
          </h2>
          <p
            class="text-lg text-gray-700 mb-6 opacity-0 animate-on-scroll"
            data-animate="fadeInUp"
          >
            Butcher Bayley Architects was founded by Luke Butcher and Carrie
            Bayley, drawing inspiration from the historic landscapes of
            Cambridgeshire, Lancashire, and their roots in Manchester.
          </p>
          <p
            class="text-lg text-gray-700 mb-8 opacity-0 animate-on-scroll"
            data-animate="fadeInUp"
          >
            Based in Oundle near Peterborough, their practice spans the East of
            England to the North West, united by a shared love of sustainable
            architecture that helps people realise their dreams for homes,
            places, and spaces.
          </p>
          <a
            href="/practice"
            class="inline-block border-b border-black pb-1 hover:opacity-70 transition-opacity opacity-0 animate-on-scroll"
            data-animate="fadeInUp"
          >
            Learn more about our practice
          </a>
        </div>
        <div class="opacity-0 animate-on-scroll" data-animate="fadeInRight">
          <img
            src="/images/ourstudio.jpg"
            alt="Our studio"
            class="w-full aspect-square object-cover bg-gray-200"
          />
        </div>
      </div>
    </div>
  </SectionWrapper>

  <!-- Featured Projects Section -->
  <SectionWrapper>
    <div class="container mx-auto">
      <h2
        class="text-3xl md:text-4xl font-light mb-6 opacity-0 animate-on-scroll"
        data-animate="fadeInDown"
      >
        Featured Projects
      </h2>

      <p
        class="text-lg text-gray-700 mb-6 opacity-0 animate-on-scroll"
        data-animate="fadeInUp"
      >
        A selection of our recent work across residential and public spaces
      </p>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12 items-center animate-on-scroll"
        data-animate="fadeInUp"
      >
        {featuredProjects.map((project) => <ProjectCard {...project} />)}
      </div>

      <div class="mt-16 text-center">
        <a
          href="/projects"
          class="inline-block border-b border-black pb-1 hover:opacity-70 transition-opacity"
        >
          View all projects
        </a>
      </div>
    </div>
  </SectionWrapper>

  <!-- Process Section -->
  <SectionWrapper class="bg-gray-50">
    <div class="container mx-auto">
      <h2
        class="text-3xl md:text-4xl font-light mb-6 opacity-0 animate-on-scroll"
        data-animate="fadeInDown"
      >
        Our Process
      </h2>
      <p
        class="text-lg text-gray-700 mb-6 opacity-0 animate-on-scroll"
        data-animate="fadeInUp"
      >
        We believe in a collaborative approach that puts our clients at the
        center of the design process.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
        <div class="opacity-0 animate-on-scroll" data-animate="fadeInUp">
          <h3 class="text-xl font-normal mb-4">01. Listen</h3>
          <p class="text-gray-700">
            We begin by understanding your needs, aspirations, and the context
            of your project. This foundation informs everything that follows.
          </p>
        </div>

        <div class="opacity-0 animate-on-scroll" data-animate="fadeInUp">
          <h3 class="text-xl font-normal mb-4">02. Design</h3>
          <p class="text-gray-700">
            We explore possibilities, test ideas, and refine concepts through an
            iterative process that balances creativity with practicality.
          </p>
        </div>

        <div class="opacity-0 animate-on-scroll" data-animate="fadeInUp">
          <h3 class="text-xl font-normal mb-4">03. Deliver</h3>
          <p class="text-gray-700">
            We manage the realization of your project with attention to detail,
            ensuring that the finished space fulfills its potential.
          </p>
        </div>
      </div>

      <div
        class="mt-16 text-center opacity-0 animate-on-scroll"
        data-animate="fadeInUp"
      >
        <a
          href="/process"
          class="inline-block border-b border-black pb-1 hover:opacity-70 transition-opacity"
        >
          Learn more about our process
        </a>
      </div>
    </div>
  </SectionWrapper>
</BaseLayout>

<style is:global>
  @keyframes overlayFadeOut {
    to {
      opacity: 0;
      visibility: hidden;
    }
  }
  .landing-overlay {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    animation: overlayFadeOut 0.8s ease forwards 1.2s;
    pointer-events: all;
    z-index: 50;
  }
</style>
