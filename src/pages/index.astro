---
import BaseLayout from "../layouts/BaseLayout.astro";
const postcodes = [
  "",
  "PE28",
  "CB1",
  "PE28",
  "NN14",
  "PE2",
  "PE27",
  "M28",
  "PE27",
  "LE3",
  "NN14",
  "NR21",
  "CB1",
  "PE9",
  "PE5",
  "CB4",
];
---

<BaseLayout>
  <div class="flex min-h-screen">
    <!-- Left: Scrollable Grid Section -->
    <div class="w-1/2 dot-grid-right">
      <div class="dot-grid-internal w-full">
        {
          postcodes.map((postcode, index) => (
            <>
              <div class="grid-cell aspect-square text-xl text-primary-dot font-light m-4">
                {postcode}
              </div>

              {/* Row‑divider for ≤ 768 px (single‑column) */}
              {index !== postcodes.length - 1 && (
                <div class="row-divider block md:hidden" aria-hidden="true" />
              )}

              {/* Row‑divider for > 768 px (two‑column) */}
              {(index + 1) % 2 === 0 && index !== postcodes.length - 1 && (
                <div class="row-divider hidden md:block" aria-hidden="true" />
              )}
            </>
          ))
        }
      </div>
    </div>
    <!-- Right: Static Text Section -->
    <div
      class="w-1/2 flex flex-col px-4 md:px-8 sticky top-0 self-start pt-[200px]"
    >
      <h1
        class="font-future text-2xl md:text-4xl text-primary mb-4"
      >
        BBA is an inter-urban studio.
      </h1>
      <p class="text-lg md:text-xl text-primary font-light break-words mb-4">
        We make progressive places for living and working, learning and
        community. We design buildings in historic university towns and
        industrial powerhouses, ancient villages and brand-new settlements. From
        our studio between towns we bring the same qualities of responsibility,
        optimism and problem-solving whatever the scale or location of the
        project.
      </p>
      <a href="/studio" class="text-lg md:text-xl relative group w-fit mb-10"
        >&gt; Studio
        <span
          class="hidden lg:block absolute left-0 -bottom-1 w-0 h-[4px] bg-primary transition-all duration-300 group-hover:w-full"
        ></span>
      </a>
    </div>
  </div>
</BaseLayout>
