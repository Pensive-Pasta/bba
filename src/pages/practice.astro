---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionWrapper from "../layouts/SectionWrapper.astro";
import Hero from "../components/Hero.astro";

const practiceLinks = [
  {
    title: "Team",
    url: "/practice/team",
    description: "Meet the people behind we are bba",
  },
  {
    title: "Sustainability",
    url: "/practice/sustainability",
    description: "Our approach to sustainable design",
  },
  {
    title: "Awards",
    url: "/practice/awards",
    description: "Recognition of our work",
  },
];
---

<BaseLayout title="Practice">
  <Hero image="/images/copper.jpg" scrollTarget="practice" />
  <SectionWrapper id="practice" class="py-20 px-4 md:px-12">
    <div class="container mx-auto">
      <p class="my-40 w-1/2 ml-auto">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugiat, modi
        enim eligendi reiciendis perspiciatis perferendis, quisquam ad, tenetur
        dolore necessitatibus sed? Esse magni quam, saepe minima earum porro
        vitae possimus!
      </p>

      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20 items-center"
      >
        <div>
          <p
            class="text-lg text-gray-700 mb-6 animate-on-scroll"
            data-animate="fadeInUp"
          >
            We bring your dreams to life – through beautiful, sustainable
            architecture.
          </p>
          <p
            class="text-lg text-gray-700 mb-6 animate-on-scroll"
            data-animate="fadeInUp"
          >
            Butcher Bayley Architects is a young, progressive architecture
            practice – built around experienced co-founders Luke Butcher and
            Carrie Bayley.
          </p>
          <p
            class="text-lg text-gray-700 mb-6 animate-on-scroll"
            data-animate="fadeInUp"
          >
            We embrace the historic role of the architect – as not just a
            designer, but an adviser and project manager – and combine it with
            our belief in contemporary, sustainable architecture.
          </p>
        </div>
        <div class="opacity-0 animate-on-scroll" data-animate="fadeInRight">
          <img
            src="/images/placeholder.jpg"
            alt="Our studio"
            class="w-full aspect-square object-cover"
          />
        </div>
      </div>
    </div>
  </SectionWrapper>

  <section class="py-20 px-4 md:px-12 bg-gray-50">
    <div class="container mx-auto">
      <SectionTitle
        title="Our Approach"
        subtitle="We combine rigorous analysis with creative thinking to deliver projects that exceed expectations."
      />

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
        <div>
          <h3 class="text-xl font-normal mb-4">Context</h3>
          <p class="text-gray-700">
            We believe that architecture should respond to its physical,
            cultural, and historical context. Each project begins with a
            thorough understanding of the site and its surroundings.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-normal mb-4">Collaboration</h3>
          <p class="text-gray-700">
            We work closely with our clients, consultants, and contractors to
            ensure that all perspectives are considered and that the final
            result reflects a shared vision.
          </p>
        </div>

        <div>
          <h3 class="text-xl font-normal mb-4">Craft</h3>
          <p class="text-gray-700">
            We care about how things are made. From the overall form to the
            smallest detail, we consider the materiality, construction, and
            experience of our buildings.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 px-4 md:px-12">
    <div class="container mx-auto">
      <SectionTitle
        title="Explore Further"
        subtitle="Learn more about different aspects of our practice."
      />

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
        {
          practiceLinks.map((link) => (
            <a
              href={link.url}
              class="group block p-8 border border-gray-200 hover:border-gray-400 transition-colors"
            >
              <h3 class="text-xl font-normal mb-3 group-hover:underline">
                {link.title}
              </h3>
              <p class="text-gray-700">{link.description}</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
